<UserControl x:Class="Build_IT_BeamStaticaModule.Views.Preview.Nodes.Pin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Build_IT_BeamStaticaModule.Views.Preview.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Polyline Points="0,0 15,20 -15,20 0,0"
                  Fill="{StaticResource GrayBrush}"
                  Stroke="{StaticResource WhiteBrush}"
                  StrokeThickness="1"/>

        <Line X1="-25" X2="25" 
              Y1="30" Y2="30"
              StrokeThickness="3"
              StrokeDashArray="1"
              Stroke="{StaticResource WhiteBrush}"/>
    </Canvas>
</UserControl>
